@media screen and (min-width: 1280px)

  $gutter = 35px

  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)

  $font-size-extra = 60px
  $font-size-large = 36px
  $font-size-mid = 24px
  $font-size-basic = 16px
  $font-size-small = 13px
  $font-size-tiny = 9px

  grid-maker(1130px, $gutter, l)

  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

  font-sizes($font-size-basic, $font-size-extra, $font-size-large, $font-size-mid, $font-size-small, $font-size-tiny)

  $player-height = 85px
  $header-height = 72px

  .border-box
    border-top-width: $margin-tiny
    border-bottom-width: $margin-tiny
    &:after, &:before
      width: $margin-tiny

  /*
  #main-nav
    padding-top: $margin-tiny

  #main-nav-row
    padding-right: $margin-mid
    font-size: $font-size-basic
  */

  #search-panel
    padding-left: $margin-basic
    padding-right: $margin-basic
    height: calc('100vh - ' + $player-height)
    #search-form-holder
      padding-left: $margin-tiny
      padding-right: $margin-tiny

  .search-label-item
    max-width: 80px
    flex-basis: 80px

  #search-tags-holder
    margin-left: 80px
    max-width: calc(unquote('66.66666% - 80px'))
    flex-basis: calc(unquote('66.66666% - 80px'))

  .search-thumb-holder
    width: 155px
    height: 155px

  .album-featured-slide
    a
      pointer-events: none
    &.swiper-slide-active
      a
        pointer-events: auto
      .slide-info-icon
        visibility: visible

  .post-selection-slide
    padding-right: $margin-basic * 2
    a
      &:hover
        .slide-info-icon
          visibility: visible

  .album-featured-slide,
  .post-selection-slide
    .slide-info-icon
      visibility: hidden

  .overlay-gallery-slide
    height: 500px
    padding-left: $margin-basic
    padding-right: $margin-basic

  .overlay-toggle-icon
    width: 2em

  #album-cover-holder,
  .product-cover-holder
    position: relative
    .overlay-toggle-icon
      position: absolute
      top: 2em
      right: 2em
      visibility: hidden
    &:hover
      .overlay-toggle-icon
        visibility: visible

  #loader
    img
      width: 80px

  #post-content
    width: 60%
    h1,h2,h3,h4,h5,h6
      font-size: $font-size-large
    figcaption
      font-size: $font-size-small

    .wp-block-pullquote
      p
        font-size: $font-size-large
      cite
        font-size: $font-size-small

    .alignwide,
    .wp-block-pullquote p
      margin-left: calc(unquote('(-100% / 60) * 10')) !important
      margin-right: calc(unquote('(-100% / 60) * 10')) !important
      max-width: calc(unquote('(100% / 60) * 80'))

    .alignfull
      margin-left: calc(unquote('(-100% / 60) * 20')) !important
      margin-right: calc(unquote('(-100% / 60) * 20')) !important
      max-width: calc(unquote('(100% / 60) * 100'))

  #footer
    padding-bottom: $player-height + $margin-mid

  #recent-community-post
    margin-top: $header-height
