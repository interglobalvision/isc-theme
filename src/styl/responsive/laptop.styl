@media screen and (min-width: 1280px)

  $gutter = 35px

  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)

  $font-size-extra = 60px
  $font-size-large = 36px
  $font-size-mid = 24px
  $font-size-basic = 16px
  $font-size-small = 13px
  $font-size-tiny = 9px

  grid-maker(1130px, $gutter, l)

  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

  font-sizes($font-size-basic, $font-size-extra, $font-size-large, $font-size-mid, $font-size-small, $font-size-tiny)

  $player-height = 80px

  .border-box
    border-top-width: $margin-tiny
    border-bottom-width: $margin-tiny
    &:after, &:before
      width: $margin-tiny

  #main-nav
    padding-top: $margin-tiny

  #main-nav-row
    padding-right: $margin-mid
    font-size: $font-size-basic

  #welcome-content
    font-size: $font-size-mid

  #search-panel
    height: calc('100vh - ' + $player-height)
    #search-form-holder
      padding-left: $margin-tiny
      padding-right: $margin-tiny

  .search-thumb-holder
    width: 155px
    height: 155px

  .overlay-gallery-slide
    height: 500px
    padding-left: $margin-basic * 2

  #album-cover-holder
    position: relative
    .overlay-toggle-icon
      position: absolute
      top: 2em
      right: 2em
      visibility: hidden
    &:hover
      .overlay-toggle-icon
        visibility: visible

  #loader
    img
      width: 80px

  .wp-block-pullquote
    p
      font-size: $font-size-large
    cite
      font-size: $font-size-small

  .alignwide,
  .wp-block-pullquote p
    margin-left: calc(unquote('(-100% / 60) * 10')) !important
    margin-right: calc(unquote('(-100% / 60) * 10')) !important
    max-width: calc(unquote('(100% / 60) * 80'))

  .alignfull
    margin-left: calc(unquote('(-100% / 60) * 20')) !important
    margin-right: calc(unquote('(-100% / 60) * 20')) !important
    max-width: calc(unquote('(100% / 60) * 100'))

  #post-content
    width: 60%
    figcaption
      font-size: $font-size-small
