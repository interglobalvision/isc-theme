@media screen and (min-width: 650px)

  $gutter = 20px

  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)

  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

  grid-maker(96%, $gutter, m)

  .mobile-only
    display: none !important

  .not-mobile
    display: initial !important

  .border-box
    border-top-width: $margin-tiny
    border-bottom-width: $margin-tiny
    &:after, &:before
      width: $margin-tiny

  #main-nav
    height: auto
    pointer-events: none
    background-color: transparent
    padding-bottom: 0
    opacity: 1
    pointer-events: none
    a
      pointer-events: auto

  #main-nav-row
    padding-right: $margin-mid
    justify-content: flex-end
    flex-direction: row
    font-size: $font-size-basic

  #mobile-nav-toggle
    display: none

  #welcome-panel
    width: 60vw
    height: 100vh
    box-shadow: 2px 0 12px 0 rgba(0,0,0,.5)

  #welcome-content
    font-size: $font-size-mid

  #featured-albums-swiper
    height: auto
    min-height: 0

  .album-featured-slide
    padding-left: 10vw
    padding-right: 10vw
    width: 60vh

  .mobile-margin-top
    margin-top: 0

  .search-thumb-holder
    width: 140px
    height: 140px

  .player-thumb-holder
    width: 37px
    height: 37px
    img
      width: 37px
      height: 37px

  .player-control
    min-width: 40px
    height: 40px
    padding: 13px

  #loader
    img
      width: 60px

  .wp-block-pullquote
    p
      font-size: $font-size-large
    cite
      font-size: $font-size-small

  .alignwide,
  .wp-block-pullquote p
    margin-left: calc(unquote('(-100% / 80) * 5')) !important
    margin-right: calc(unquote('(-100% / 80) * 5')) !important
    max-width: calc(unquote('(100% / 80) * 90'))

  .alignfull
    margin-left: calc(unquote('(-100% / 80) * 10')) !important
    margin-right: calc(unquote('(-100% / 80) * 10')) !important
    max-width: calc(unquote('(100% / 80) * 100'))

  #post-content
    width: 80%
    figcaption
      font-size: $font-size-small

  #wolf-logo
    width: 80px
